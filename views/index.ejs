<% include partials/header.ejs %>

<div class = "container">
    <header class = "jumbotron">
        <h1>Welcome to My Workout Log</h1>
        <p>Pick your workout.</p>
        <p>
            <a class = "btn btn-primary btn-lrg" href="/workouts/new">Register a New Workout</a>
        </p>

    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% workouts.forEach(function(workout){ %>
               <div class="col-md-3 col-sm-6">
                   <div class = "thumbnail">
                       <img src="<%=workout.image%>" >
                       <div class="caption">
                           <h3><%=workout.name%></h3>
                       </div>
                       <p>
                           <a href="/workouts/<%=workout._id%>" class="btn btn-primary">More Information</a>
                       </p>
                   </div>
               </div>
            <% }); %>
        </div>
    </div>


<% include partials/footer %>
