<%include partials/header.ejs%>

<div class = "container">
    <header class = "jumbotron">
        <h1>Welcome to My Lazy Life Log</h1>
        <p>Pick your drink.</p>
        <p>
            <a class = "btn btn-primary btn-lrg" href="/drinks/new">Enter a New Drink</a>
        </p>

    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% drinks.forEach(function(drink){ %>
               <div class="col-md-3 col-sm-6">
                   <div class = "thumbnail">
                       <img src="<%=drink.image%>" >
                       <div class="caption">
                           <h3><%=drink.name%></h3>
                       </div>

                           <h5><%= drink.genre %> </h5>

                           <h5><%= drink.dservings %> servings today.</h5>

                           <h5><%= drink.wservings %> servings this week.</h5>
                       
                       <form action="/drinks/<%=drink._id%>/inc?_method=PUT" method="POST">
                           <button class="btn btn-success" onclick="<%=drink.dservings++%>">Drink Up!</button>
                       </form>
                       <div>
                           <a class = "btn btn-primary" href="/drinks/<%=drink._id%>">More Info</a>
                       </div>
                   </div>
               </div>
            <% }); %>
        </div>
    <p><br>

        <a href="/" class="btn btn-warning">Go Back</a>
    </p>
    </div>





<%include partials/footer.ejs%>
