<%include partials/header.ejs%>



<div class="container">
    <div class="row">


        <h1 style="text-align:center">Edit <%=drink.name%></h1>
        <div style="width:30%; margin:25px auto;">

            <!--This submits a post request to /drinks in my req-->
            <form action="/drinks/<%=drink._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="text" name = "drink[name]" value="<%=drink.name%>">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name = "drink[image]" value="<%=drink.image%>">
                    <label style="color:slategray;">image url</label>
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name = "drink[description]" value="<%=drink.description%>">
                    <label style="color:slategray;">description</label>
                </div>
                <div class="form-group">
                    <input class = "form-control" type="number" name = "drink[calories]" value="<%=drink.calories%>">
                    <label style="color:slategray;">calories</label>
                </div>
                <div class="form-group">
                    <input class = "form-control" type="radio" name="drink[type]" >Healthy<br>
                    <input class = "form-control" type="radio" name="drink[type]" >Alcohol<br>
                    <input class = "form-control" type="radio" name="drink[type]" >Other
                </div>
                <div class="form-group">
                    <input class = "form-control" type="number" name = "drink[dservings]" value="<%=drink.dservings%>">
                    <label style="color:slategray;">servings today</label>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/drinks">Go Back</a>
        </div>

    </div>

</div>

<%include partials/footer.ejs%>